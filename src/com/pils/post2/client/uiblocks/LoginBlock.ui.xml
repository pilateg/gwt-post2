<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.mainPanel {
			position: relative;
			width: 200px;
			height: 100px;
		}

		.mainPanel > * {
			float: left;
		}
	</ui:style>
	<g:FlowPanel ui:field="mainPanel" styleName="{style.mainPanel}">
		<g:TextBox ui:field="name"/>
		<g:TextBox ui:field="pass"/>
		<g:Button ui:field="loginButton"/>
		<g:Button ui:field="registerButton"/>
	</g:FlowPanel>
</ui:UiBinder>